{
    "type": "AdaptiveCard",
    "$schema": "https://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "body": [
        {
            "inlines": [
                {
                    "type": "TextRun",
                    "size": "Small",
                    "text": "ArcGIS Enterprise Patch Check",
                    "selectAction": {
                        "url": "https://support.esri.com/en-us/patches-updates",
                        "type": "Action.OpenUrl"
                    }
                }
            ],
            "type": "RichTextBlock"
        },
        {
            "columns": [
                {
                    "width": "auto",
                    "items": [
                        {
                            "type": "Icon",
                            "name": "Server",
                            "color": "Accent"
                        }
                    ],
                    "type": "Column"
                },
                {
                    "width": "stretch",
                    "items": [
                        {
                            "size": "Large",
                            "text": "Machine",
                            "weight": "Bolder",
                            "wrap": true,
                            "type": "TextBlock"
                        }
                    ],
                    "verticalContentAlignment": "Center",
                    "spacing": "Small",
                    "type": "Column"
                }
            ],
            "spacing": "Small",
            "type": "ColumnSet"
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": "stretch",
                            "items": [
                                {
                                    "type": "Table",
                                    "columns": [
                                        {
                                            "width": 1
                                        },
                                        {
                                            "width": 1
                                        }
                                    ],
                                    "rows": [
                                        {
                                            "type": "TableRow",
                                            "cells": [
                                                {
                                                    "type": "TableCell",
                                                    "items": [
                                                        {
                                                            "type": "TextBlock",
                                                            "text": "Machine Name",
                                                            "wrap": true,
                                                            "weight": "Bolder"
                                                        }
                                                    ],
                                                    "verticalContentAlignment": "Center"
                                                },
                                                {
                                                    "type": "TableCell",
                                                    "verticalContentAlignment": "Center",
                                                    "items": [
                                                        {
                                                            "type": "TextBlock",
                                                            "text": "@{triggerBody()?['MachineName']}",
                                                            "wrap": true
                                                        }
                                                    ]
                                                }
                                            ]
                                        },
                                        {
                                            "type": "TableRow",
                                            "cells": [
                                                {
                                                    "type": "TableCell",
                                                    "items": [
                                                        {
                                                            "type": "TextBlock",
                                                            "text": "FQDN",
                                                            "wrap": true,
                                                            "weight": "Bolder"
                                                        }
                                                    ],
                                                    "verticalContentAlignment": "Center"
                                                },
                                                {
                                                    "type": "TableCell",
                                                    "verticalContentAlignment": "Center",
                                                    "items": [
                                                        {
                                                            "type": "TextBlock",
                                                            "text": "@{triggerBody()?['FQDN']}",
                                                            "wrap": true
                                                        }
                                                    ]
                                                }
                                            ]
                                        },
                                        {
                                            "type": "TableRow",
                                            "cells": [
                                                {
                                                    "type": "TableCell",
                                                    "items": [
                                                        {
                                                            "type": "TextBlock",
                                                            "text": "IPV4",
                                                            "wrap": true,
                                                            "weight": "Bolder"
                                                        }
                                                    ],
                                                    "verticalContentAlignment": "Center"
                                                },
                                                {
                                                    "type": "TableCell",
                                                    "verticalContentAlignment": "Center",
                                                    "items": [
                                                        {
                                                            "type": "TextBlock",
                                                            "text": "@{triggerBody()?['IPV4']}",
                                                            "wrap": true
                                                        }
                                                    ]
                                                }
                                            ]
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": "auto",
                            "items": [
                                {
                                    "type": "Icon",
                                    "name": "AlertBadge"
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "width": "stretch",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "wrap": true,
                                    "text": "Available Patches",
                                    "size": "Large",
                                    "weight": "Bolder"
                                }
                            ],
                            "verticalContentAlignment": "Center"
                        }
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "Table",
                    "columns": [
                        {
                            "width": 1
                        },
                        {
                            "width": 1
                        }
                    ],
                    "rows": [
                        {
                            "type": "TableRow",
                            "cells": [
                                {
                                    "type": "TableCell",
                                    "verticalContentAlignment": "Center",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "Component",
                                            "wrap": true,
                                            "weight": "Bolder"
                                        }
                                    ]
                                },
                                {
                                    "type": "TableCell",
                                    "verticalContentAlignment": "Center",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "@{body('Parse_JSON')?['component']}",
                                            "wrap": true
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "type": "TableRow",
                            "cells": [
                                {
                                    "type": "TableCell",
                                    "verticalContentAlignment": "Center",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "Release Date",
                                            "wrap": true,
                                            "weight": "Bolder"
                                        }
                                    ]
                                },
                                {
                                    "type": "TableCell",
                                    "verticalContentAlignment": "Center",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "@{body('Parse_JSON')?['releaseDate']}",
                                            "wrap": true
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "type": "TableRow",
                            "cells": [
                                {
                                    "type": "TableCell",
                                    "verticalContentAlignment": "Center",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "wrap": true,
                                            "weight": "Bolder",
                                            "text": "URL"
                                        }
                                    ]
                                },
                                {
                                    "type": "TableCell",
                                    "verticalContentAlignment": "Center",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "@{body('Parse_JSON')?['url']}",
                                            "wrap": true
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "type": "TableRow",
                            "cells": [
                                {
                                    "type": "TableCell",
                                    "verticalContentAlignment": "Center",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "Description",
                                            "wrap": true,
                                            "weight": "Bolder"
                                        }
                                    ]
                                },
                                {
                                    "type": "TableCell",
                                    "verticalContentAlignment": "Center",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "@{body('Parse_JSON')?['description']}",
                                            "wrap": true
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}