{
    "type": "AdaptiveCard",
    "speak": "ArcGIS Enterprise Patch Check",
    "$schema": "https://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "body": [
        {
            "inlines": [
                {
                    "type": "TextRun",
                    "size": "ExtraLarge",
                    "text": "ArcGIS Enterprise Patch Check",
                    "selectAction": {
                        "url": "https://support.esri.com/en-us/patches-updates",
                        "type": "Action.OpenUrl"
                    }
                }
            ],
            "type": "RichTextBlock"
        },
        {
            "columns": [
                {
                    "width": "auto",
                    "items": [
                        {
                            "type": "Icon",
                            "name": "Server",
                            "color": "Accent"
                        }
                    ],
                    "type": "Column"
                },
                {
                    "width": "stretch",
                    "items": [
                        {
                            "size": "Large",
                            "text": "Machine",
                            "weight": "Bolder",
                            "wrap": true,
                            "type": "TextBlock"
                        }
                    ],
                    "verticalContentAlignment": "Center",
                    "spacing": "Small",
                    "type": "Column"
                }
            ],
            "spacing": "Small",
            "type": "ColumnSet"
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": 11,
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "Machine Name",
                                    "wrap": true,
                                    "size": "Medium",
                                    "weight": "Bolder"
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "width": 35,
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "@{triggerBody()?['MachineName']}",
                                    "wrap": true
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": 11,
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "FQDN",
                                    "wrap": true,
                                    "size": "Medium",
                                    "weight": "Bolder"
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "width": 35,
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "@{triggerBody()?['FQDN']}",
                                    "wrap": true
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": 11,
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "IPV4",
                                    "wrap": true,
                                    "size": "Medium",
                                    "weight": "Bolder"
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "width": 35,
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "@{triggerBody()?['IPV4']}",
                                    "wrap": true
                                }
                            ]
                        }
                    ]
                }
            ],
            "targetWidth": "AtLeast:Narrow"
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "Machine Name",
                    "wrap": true,
                    "size": "Medium",
                    "weight": "Bolder"
                },
                {
                    "type": "TextBlock",
                    "text": "@{triggerBody()?['MachineName']}",
                    "wrap": true
                },
                {
                    "type": "TextBlock",
                    "text": "FQDN",
                    "wrap": true,
                    "size": "Medium",
                    "weight": "Bolder"
                },
                {
                    "type": "TextBlock",
                    "text": "@{triggerBody()?['FQDN']}",
                    "wrap": true
                },
                {
                    "type": "TextBlock",
                    "text": "IPV4",
                    "wrap": true,
                    "size": "Medium",
                    "weight": "Bolder"
                },
                {
                    "type": "TextBlock",
                    "text": "@{triggerBody()?['IPV4']}",
                    "wrap": true
                }
            ],
            "targetWidth": "VeryNarrow"
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": "auto",
                            "items": [
                                {
                                    "type": "Icon",
                                    "name": "AlertBadge"
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "width": "stretch",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "wrap": true,
                                    "text": "Available Patch",
                                    "size": "Large",
                                    "weight": "Bolder"
                                }
                            ],
                            "verticalContentAlignment": "Center"
                        }
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": 11,
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "Component",
                                    "wrap": true,
                                    "size": "Medium",
                                    "weight": "Bolder"
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "width": 35,
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "@{body('Parse_JSON')?['component']}",
                                    "wrap": true
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": 11,
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "Release Date",
                                    "wrap": true,
                                    "size": "Medium",
                                    "weight": "Bolder"
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "width": 35,
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "@{body('Parse_JSON')?['releaseDate']}",
                                    "wrap": true
                                }
                            ]
                        }
                    ]
                },
                
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": 11,
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "Description",
                                    "wrap": true,
                                    "weight": "Bolder",
                                    "size": "Medium"
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "width": 35,
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "@{body('Parse_JSON')?['description']}",
                                    "wrap": true
                                }
                            ],
                            "selectAction": {
                                "url": "@{body('Parse_JSON')?['url']}",
                                "type": "Action.OpenUrl"
                            }
                        }
                    ]
                },
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": 11,
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "Link",
                                    "wrap": true,
                                    "size": "Medium",
                                    "weight": "Bolder"
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "width": 35,
                            "items": [
                                {
                                    "type": "Icon",
                                    "name": "Link",
                                    "selectAction": {
                                        "type": "Action.OpenUrl",
                                        "url": "@{body('Parse_JSON')?['url']}"
                                    },
                                    "size": "Small",
                                    "color": "Accent"
                                }
                            ]
                        }
                    ]
                }
            ],
            "targetWidth": "AtLeast:Narrow"
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "Component",
                    "wrap": true,
                    "size": "Medium",
                    "weight": "Bolder"
                },
                {
                    "type": "TextBlock",
                    "text": "@{body('Parse_JSON')?['component']}",
                    "wrap": true
                },
                {
                    "type": "TextBlock",
                    "text": "Release Date",
                    "wrap": true,
                    "size": "Medium",
                    "weight": "Bolder"
                },
                {
                    "type": "TextBlock",
                    "text": "@{body('Parse_JSON')?['releaseDate']}",
                    "wrap": true
                },
                
                {
                    "type": "TextBlock",
                    "text": "Description",
                    "wrap": true,
                    "size": "Medium",
                    "weight": "Bolder"
                },
                {
                    "type": "TextBlock",
                    "text": "@{body('Parse_JSON')?['description']}",
                    "wrap": true
                },
                {
                    "type": "TextBlock",
                    "text": "Link",
                    "wrap": true,
                    "size": "Medium",
                    "weight": "Bolder"
                },
                {
                    "type": "Icon",
                    "name": "Link",
                    "size": "Small",
                    "color": "Accent",
                    "selectAction": {
                        "url": "@{body('Parse_JSON')?['url']}",
                        "type": "Action.OpenUrl"
                    }
                }
            ],
            "targetWidth": "VeryNarrow"
        }
    ]
}